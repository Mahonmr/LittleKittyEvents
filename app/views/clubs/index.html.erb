<h1>Listing Clubs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Private</th>
      <th>Location</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clubs.each do |club| %>
      <tr>
        <td><%= link_to 'Add', add_club_user_club_path(current_user, club), method: :post if user_signed_in? %></td>
        <td><%= club.name %></td>
        <td><%= club.private %></td>
        <td><%= club.location %></td>
        <td><%= club.latitude %></td>
        <td><%= club.longitude %></td>
        <td><%= link_to 'Show', user_club_path(club.user_id, club) %></td>
        <td><%= link_to 'Edit', edit_user_club_path(club.user_id, club) if can? :edit, club %></td>
        <td><%= link_to 'Destroy', user_club_path(club.user_id, club), method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, club  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Club', new_user_club_path(current_user) if can? :create, Club %>
