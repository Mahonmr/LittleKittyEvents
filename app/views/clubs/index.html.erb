<h1>Listing Clubs</h1>

<ul class="nav nav-tabs">
  <li class="active">
    <a href="#all_clubs" data-toggle="tab" aria-expanded="true">All Clubs</a>
  </li>
  <% if signed_in? %>
    <li>
      <a href="#joined" data-toggle="tab" aria-expanded="false">Joined Clubs</a>
    </li>
    <li>
      <a href="#mine" data-toggle="tab" aria-expanded="false">My Clubs</a>
    </li>
  <% end %>
</ul>

<div class="tab-content">
  <div class="tab-pane active" id="all_clubs">
    <%= render 'clubs', object: @clubs %>
  </div>
  <% if signed_in? %>
    <div class="tab-pane" id="joined">
      <%= render 'clubs', object: @joined_clubs %>
    </div>
    <div class="tab-pane" id="mine">
      <%= render 'clubs', object: @my_clubs %>
    </div>
  <% end %>
</div>

<%= link_to 'New Club', new_athlete_club_path if can? :create, Club %>
