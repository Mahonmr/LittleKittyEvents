<h1>Listing Clubs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Private</th>
      <th>Location</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clubs.each do |club| %>
      <tr>
        <td><%= link_to 'Add', add_club_user_club_path(current_user, club), method: :post if user_signed_in? %></td>
        <td><%= club.name %></td>
        <td><%= club.private %></td>
        <td><%= club.location %></td>
        <td><%= club.latitude %></td>
        <td><%= club.longitude %></td>
        <td><%= link_to 'Show', club_path(club) if user_signed_in? %></td>
        <td><%= link_to 'Edit', edit_club_path(club) if user_signed_in? %></td>
        <td><%= link_to 'Destroy', club_path(club), method: :delete, data: { confirm: 'Are you sure?' } if user_signed_in? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Club', new_club_path if user_signed_in? %>
