<%= form_for([@user]) do |f| %>
  <%#= render "layouts/errors", :object => ([current_user, @event])%>

  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
