<h1>Listing Clubs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Private</th>
      <th>Location</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.role %></td>
        <td><%#= link_to 'Show', user_club_path(current_user, club) if user_signed_in? %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%#= link_to 'Destroy', user_club_path(current_user, club), method: :delete, data: { confirm: 'Are you sure?' } if user_signed_in? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

