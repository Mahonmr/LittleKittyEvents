<% if signed_in? %>
  <% if current_user.admin? %>
    <% content_for :main_menu do %>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Admin <span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to 'Users', admin_users_path %></li><br>
          <li><%= link_to 'Clubs', admin_clubs_path %></li>
        </ul>
      </li>
    <% end %>
  <% end %>
  <% if current_user.athlete? %>
    <% content_for :main_menu do %>
      <li><%= link_to 'Clubs', athlete_clubs_path %></li>
      <li><%= link_to 'Athletes', athlete_users_path %></li>
      <li><%= link_to 'Me', edit_athlete_user_path(current_user) %></li>
    <% end %>
  <% end %>
<% else %>
  <% content_for :main_menu do %>
    <li><%= link_to 'Clubs', clubs_path %></li>
  <% end %>
<% end %>
